<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calendar_button_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/headline_5_text_size</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="calendar_button_operation_style" parent="calendar_button_style">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">@dimen/headline_4_text_size</item>
        <item name="android:textColor">?colorAccent</item>
    </style>
</resources>